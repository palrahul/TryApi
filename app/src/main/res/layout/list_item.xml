<?xml version="1.0" encoding="utf-8"?>
<com.watbots.tryapi.ui.ListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/doordash_def"
        android:adjustViewBounds="false" />
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_logo"
        android:layout_toRightOf="@id/item_logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        tools:text="u2020"
        />
    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_toEndOf="@id/item_logo"
        android:layout_toRightOf="@id/item_logo"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Food"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_description"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/item_logo"
        android:layout_toRightOf="@id/item_logo"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/down"
            android:drawableStart="@drawable/down"
            android:gravity="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:text="4"
            android:maxHeight="52dp"
            />
        <TextView
            android:id="@+id/temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/up"
            android:drawableStart="@drawable/up"
            android:gravity="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
            tools:text="30mins"
            android:maxHeight="52dp"
            />
    </LinearLayout>

</com.watbots.tryapi.ui.ListItemView>
